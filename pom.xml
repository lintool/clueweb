	<scm>
		<connection>scm:git:git@github.com:chauff/clueweb.git</connection>
		<developerConnection>scm:git:git@github.com:chauff/clueweb.git</developerConnection>
		<url>git@github.com:chauff/clueweb.git</url>
	</scm>

	<developers>
		<developer>
			<id>lintool</id>
			<name>Jimmy Lin</name>
